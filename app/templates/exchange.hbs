<div class="col-sm-12">
        <h1>Beer Exchange</h1>
</div>

<div class="col-sm-5">
        <table class="table table-striped table-bordered">
                <thead>
                        <tr>
                              <th>Participants</th>  
                        </tr>
                </thead>
                <tbody>
                        {{#each model as |person|}}
                                <tr>
                                        <td>
                                                {{#link-to 'exchange.edit' person.id}}{{person.name}}{{/link-to}}
                                                <button {{action 'deletePerson' person.id}} class="btn btn-danger pull-right"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>
                                        </td>
                                </tr>
                                {{else}}
                                <tr><td>add some users!</td></tr>
                        {{/each}}
                </tbody> 
        </table>
        <button {{action 'generateExchange' model.person}} class="btn btn-success">Generate Exchange</button>
</div>
<div class="col-sm-7">
        {{outlet}}
</div>
<div class="col-sm-12">
        {{exchangeResults}}
</div>